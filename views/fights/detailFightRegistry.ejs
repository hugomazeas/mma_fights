<div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
    <div class=" sm:items-start">
        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
            <div class="mt-2">
                <div class="grid grid-cols-2 gap-y-3 text-base text-gray-600">
                    <!-- Fighter Information -->
                    <div class="col-span-2 font-bold text-center text-gray-800 py-3 text-xl">Fighter Details
                    </div>
                    <div class="flex w-96">

                        <div
                            class="<%= fight.winner_full_name === fight.fighter1_full_name ? 'text-green-600' : 'text-red-600' %> text-right w-5/12">
                            <strong>
                                <%= fight.fighter1_full_name %>
                            </strong>
                        </div>
                        <div class="w-2/12 text-center font-bold">
                            VS
                        </div>
                        <div
                            class="<%= fight.winner_full_name === fight.fighter2_full_name ? 'text-green-600' : 'text-red-600' %> w-5/12">
                            <strong>
                                <%= fight.fighter2_full_name %>
                            </strong>
                        </div>
                    </div>
                    <br>
                    <div class="text-center  w-96">
                        Method:
                        <strong>
                            <%= fight.win_type_name %>
                        </strong>
                    </div>

                    <!-- Event Information -->
                    <div class="col-span-2 font-bold text-center text-gray-800 py-3">Event Information</div>
                    <div class="text-right font-semibold mr-3">Event:</div>
                    <div>
                        <%= fight.event_name %>
                    </div>

                    <div class="text-right font-semibold mr-3">UFC Number:</div>
                    <div>
                        <%= fight.ufc_number %>
                    </div>

                    <div class="text-right font-semibold mr-3">Card Type:</div>
                    <div>
                        <%= fight.card_type_name %>
                    </div>

                    <!-- Round Information -->
                    <div class="col-span-2 font-bold text-center text-gray-800 py-3">Round Information</div>
                    <div class="text-right font-semibold mr-3">Number of Rounds:</div>
                    <div>
                        <%= fight.number_round %>
                    </div>

                    <div class="text-right font-semibold mr-3">Round Length:</div>
                    <div>
                        <%= fight.round_length %>
                    </div>
                </div>
            </div>
        </div>
        <% fight.rounds.forEach(round=> { %>
            <div>
                <h3><strong>Round <%= round.round_number %></strong></h3>
                <p>
                    <%= fight.fighter1_full_name %>'s strikes: <%= round.fighter1_strikes %>
                </p>
                <%= fight.fighter2_full_name %>'s strikes: <%= round.fighter2_strikes %>
                        </p>
            </div>
            <% }); %>

    </div>
</div>