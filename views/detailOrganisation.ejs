<%- include('partials/header') %>
<div class="container mx-auto p-8">
    <div class="max-w-xl m-4 p-10 bg-white rounded shadow-xl">
        <p class="text-gray-800 font-medium">Add Event</p>
        <div class="">
            <label class="block text-sm text-gray-00" for="name">Name</label>
            <input class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded" type="text" id="event_name" name="name"
                placeholder="Enter Event Name" aria-label="Name">
        </div>
        <div class="mt-4">
            <label class="block text-sm text-gray-00" for="date">Date</label>
            <input class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded" type="date" id="event_date" name="date"
                aria-label="Date">
        </div>
        <div class="mt-4">
            <label class="block text-sm text-gray-700" for="dropdown">Organisation</label>
            <select id="event_organisation" name="dropdown" class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded">
                <option value="<%= organisation.organisation_id %>"><%= organisation.name %></option>
            </select>
        </div>
        <div class="mt-4">
            <label class="block text-sm text-gray-00" for="location">Location</label>
            <input class="w-full px-5 py-1 text-gray-700 bg-gray-200 rounded" type="text" id="event_location" name="location"
                placeholder="Enter Location" aria-label="Location">
        </div>
        <div class="mt-6">
            <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" id="btn_add_event">Add
                Event</button>
        </div>
    </div>
</div>
<div class="container mx-auto p-8">
    <div class="flex flex-col">
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <h1 class="text-3xl font-bold text-gray-900">Events</h1>
                    <table class="min-w-full">
                        <thead class="bg-gray-100 border-b">
                            <tr>
                                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                                    ID
                                </th>
                                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                                    Name
                                </th>
                                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                                    Date
                                </th>
                                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                                    Location
                                </th>
                                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                                    Organisation
                                </th>
                                <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4 text-left">
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-gray-100 border-b">
                            <% events.forEach(event=> { %>
                                <tr class="pointer" onclick="detailEvent('<%= event.organisation_id %>', '<%= event.event_id %>')">
                                    <td class="text-sm text-gray-900 px-6 py-4 whitespace-nowrap">
                                        <%= event.event_id %>
                                    </td>
                                    <td class="text-sm text-gray-900 px-6 py-4 whitespace-nowrap">
                                        <%= event.name %>
                                    </td>
                                    <td class="text-sm text-gray-900 px-6 py-4 whitespace-nowrap">
                                        <%= event.date %>
                                    </td>
                                    <td class="text-sm text-gray-900 px-6 py-4 whitespace-nowrap">
                                        <%= event.location %>
                                    </td>
                                    <td class="text-sm text-gray-900 px-6 py-4 whitespace-nowrap">
                                        <%= event.organisation_name %>
                                    </td>
                                    <td class="text-sm text-gray-900 px-6 py-4 whitespace-nowrap">
                                        <button
                                            class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded"
                                            type="submit">Edit</button>
                                        <button
                                            class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded"
                                            type="submit">Delete</button>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>