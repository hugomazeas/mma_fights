<div class="container mx-auto " style="padding: 8rem 3rem 3rem 3rem;"">
    <div class=" m-4 p-10 bg-white rounded shadow-xl">
    <h2 class="text-2xl font-bold mb-4">Organisation Details <small><strong>#<span id="event_id">
                    <%= organisation.organisation_id %>
                </span></strong></small></h2>
    <div class="mb-4">
        <p class="text-gray-600">Name: <%= organisation.name %>
        </p>
        <p class="text-gray-600">Headquarters: <%= organisation.date %>
        </p>
        <p class="text-gray-600">Founded year: <%= organisation.founded_year %>
        </p>
        <p class="text-gray-600">Number of events: <%= organisation.event_count %>
        </p>
    </div>
    <div class="flex mb-4 justify-between">
        <button
            class="select-none rounded-lg bg-gray-900 py-3 px-6 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-gray-900/20 focus:opacity-[0.85] focus:shadow-none active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
            onclick="Event.show_modal_form()">
            Add event
        </button>
        <button class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded"
            onclick="Organisation.delete('<%= organisation.organisation_id %>');">
            Delete organisation
        </button>
    </div>
</div>
<div class="container mx-auto " style="padding: 8rem 3rem 3rem 3rem;"">
    <div class=" flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
            <div class="overflow-hidden">
                <h1 class="text-3xl font-bold text-gray-900">Events: </h1>
                <div class="flex flex-wrap">

                    <% events.forEach(event=> { %>
                        <div class="px-6 py-2">
                            <div style="max-width: 25rem; height: 45rem;"
                                class="relative flex flex-col rounded-xl bg-white bg-clip-border text-gray-700 shadow-md" >
                                <div
                                    class="relative m-0 overflow-hidden text-gray-700 bg-transparent rounded-none shadow-none bg-clip-border">
                                    <img src="https://via.placeholder.com/400x500" />
                                </div>
                                <div class="p-6">
                                    <h4
                                        class="block font-sans text-2xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900">
                                        <%= event.name %><br><small class="text-sm text-gray-600 font-bold">
                                                <%= event.location %>
                                            </small>
                                    </h4>
                                    <p
                                        class="block mt-3 font-sans text-xl antialiased font-normal leading-relaxed text-gray-700">
                                        <%= event.description.substring(0, 50) %>...
                                    </p>
                                    <p
                                        class="block mt-3 font-sans text-xl antialiased font-normal leading-relaxed text-gray-700">
                                        Date: <%= event.date.toISOString().split('T')[0] %>
                                    </p>
                                </div>
                                <div class="flex items-center justify-between p-6">
                                    <button
                                        class="select-none rounded-lg bg-gradient-to-tr from-gray-900 to-gray-800 py-3 px-6 text-center align-middle font-sans text-xs font-bold uppercase text-white shadow-md shadow-gray-900/10 transition-all hover:shadow-lg hover:shadow-gray-900/20 active:opacity-[0.85] disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
                                        type="button"
                                        onclick="Facade.navigator.display_url('/organisations/<%= organisation.organisation_id %>/events/<%= event.event_id %>')">
                                        More info
                                    </button>

                                </div>
                            </div>

                        </div>
                        <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>